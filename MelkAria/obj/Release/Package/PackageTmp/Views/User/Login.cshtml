    Layout = null;
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="google" content="notranslate" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/Content/vendors/material-design-iconic-font/dist/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link href="~/Content/vendors/animate.css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/app.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/MyStyle.css" rel="stylesheet" />
    <link href="~/Content/vendors/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />
</head>

<body data-sa-theme="1">

    <div class="login">

        <!-- Login -->
        <div class="login__block active" id="l-login">
            <div class="login__block__header">
                <i class="zmdi zmdi-account-circle"></i>
                ! لطفا وارد شوید
               <a class="dropdown-item"  href="/User/RegisterUser">ثبت نام</a>
                @*<a class="dropdown-item" data-sa-action="login-switch" data-sa-target="#l-forget-password" href="default.htm">فراموشی رمز عبور؟</a>*@

            </div>

            <div class="login__block__body">
                <div style="color:red;text-align:right">
                    @Html.ValidationSummary()
                </div>
                    <form action="~/User/SignIn" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.UserNamee, new { placeholder = "نام کاربری", @class = "form-control text-center" })
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { placeholder = "رمز عبور", @class = "form-control text-center" })
                        </div>
                        <div class="form-group">
                            <img alt="Captcha" src="@Url.Action("CaptchaImage")" style="" />
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Captcha, new { placeholder = "جواب جمع", @class = "form-control text-center" })
                            @Html.ValidationMessageFor(model => model.Captcha)
                        </div>
                        <button type="submit" class="btn btn--icon login__block__btn">
                            <i class="zmdi zmdi-long-arrow-right"></i>
                        </button>
                        <input type="hidden" name="Url" value="@Request["ReturnUrl"]" />

                    </form>
            </div>
        </div>

        <!-- Register -->
        
        <!-- Forgot Password -->
